<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_25sdp"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/backgroundlayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_weight="1"
        android:background="@drawable/backgroundlayout"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_add_view_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chck_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="1.1"
                    android:drawableLeft="@drawable/location"
                    android:hint="default"
                    android:enabled="false"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:text="Address Type: "
                    android:textColor="@color/redB"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_addType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center|left"
                    android:text="House"
                    android:textColor="@color/redB"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_margin="2dp"
                android:background="@color/blueGre"
                android:padding="@dimen/_5sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_add_view_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Raghu"
                    android:textColor="@color/bGreen"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_full_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:paddingStart="@dimen/_5sdp"
                    android:gravity="center|left"
                    android:inputType="textMultiLine"
                    android:text="ANALOGICS TECH INDIA LTD.
                    # 9/10, Road No. 6,Nacharam Industrial Estate \nHyderabad â€“ 500 076, Indi"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_delivery_Inst"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/text_button_bg"
                    android:drawableRight="@drawable/edit_location"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="Add Delivery Instructions"
                    android:textColor="@color/bGreen"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/tv_curt_location"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="3dp"
                    android:paddingStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/text_button_bg"
                    android:drawableLeft="@drawable/location"
                    android:gravity="center|left"
                    android:paddingRight="@dimen/_15sdp"
                    android:text="Update Current Location"
                    android:textColor="@color/Primary"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_editAdd"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1.2"
                    android:background="@drawable/text_button_bg"
                    android:gravity="center"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="Edit"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/tv_RemoveAdd"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1.1"
                    android:layout_margin="3dp"
                    android:paddingStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/text_button_bg"
                    android:gravity="center"
                    android:paddingRight="@dimen/_15sdp"
                    android:text="Remove"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/tv_setDeftAdd"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_button_bg"
                    android:gravity="center"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="Set as Default"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>